{
  "name": "segmenta",
  "version": "1.0.13",
  "description": "A blazingly fast API for managing and querying arbitrary data segments stored in Redis",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest",
    "lint": "tslint -p .",
    "autotest": "jest --watch",
    "build": "gulp build",
    "autobuild": "nodemon -x \"run-s build\" -w src -w tests -e ts",
    "preunleash": "gulp build",
    "unleash": "unleash",
    "prerelease": "run-s lint build test",
    "release": "unleash -p",
    "gulp": "gulp"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.spec.ts"
    ],
    "verbose": false,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/\\.git/",
      "/.*\\.d\\.ts/",
      "/_old__$/",
      "/\\.idea/",
      "/\\.vscode/"
    ],
    "watchPathIgnorePatterns": [
      "/dist/",
      "/\\..*/",
      "/_old__$/",
      "/node_modules/",
      "/.*\\.d\\.ts/",
      "/package.json/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "unmockedModulePathPatterns": [
      "jasmine-expect"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codeo-za/segmenta.git"
  },
  "keywords": [
    "redis",
    "segmentation",
    "segment",
    "sets"
  ],
  "author": "Codeo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/codeo-za/segmenta/issues"
  },
  "homepage": "https://github.com/codeo-za/segmenta#readme",
  "dependencies": {
    "ioredis": "^3.2.2",
    "lodash": "^4.17.10",
    "uuid": "^3.2.1",
    "@types/ioredis": "^3.2.7"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/faker": "^4.1.2",
    "@types/jasmine-expect": "^3.8.1",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.108",
    "@types/node": "^10.0.6",
    "@types/uuid": "^3.4.3",
    "chai": "^4.1.2",
    "expect-more-jest": "^1.0.1",
    "faker": "^4.1.0",
    "gulp": "^3.9.1",
    "gulp-help": "^1.6.1",
    "gulp-typescript": "^4.0.2",
    "jest": "^22.4.3",
    "node-ts": "^2.1.2",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "require-dir": "^1.0.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.5",
    "tslint": "^5.10.0",
    "tslint-consistent-codestyle": "^1.13.0",
    "typescript": "^2.8.3",
    "unleash": "^2.0.1"
  }
}
